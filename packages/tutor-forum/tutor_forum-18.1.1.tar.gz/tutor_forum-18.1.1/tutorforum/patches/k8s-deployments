  name: forum
  labels:
    app.kubernetes.io/name: forum
spec:
  selector:
    matchLabels:
      app.kubernetes.io/name: forum
  template:
    metadata:
      labels:
        app.kubernetes.io/name: forum
    spec:
      securityContext:
        runAsUser: 1000
        runAsGroup: 1000
      containers:
        - name: forum
          image: {{ FORUM_DOCKER_IMAGE }}
          ports:
            - containerPort: {{ FORUM_PORT }}
          env:
            {{ patch("forum-k8s-env")|indent(12) }}
