summary: iSCSI tests running on single host
discover:
  - name: iscsi-local
    how: fmf
    filter:
      - tag:iscsi
      - tag:local
adjust+:
  - when: distro != rhel-10
    prepare+:
      - how: install
        copr: mhoyer/libiscsi
        package: libiscsi-utils
  - when: distro == rhel-10
    prepare+:
      - how: install
        copr: "mhoyer/libiscsi centos-stream-10"
        package: libiscsi-utils
