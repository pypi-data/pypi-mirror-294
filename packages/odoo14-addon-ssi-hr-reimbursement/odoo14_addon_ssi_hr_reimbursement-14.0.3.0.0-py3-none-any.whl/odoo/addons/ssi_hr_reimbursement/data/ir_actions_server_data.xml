                name="code"
            >records.with_context(bypass_policy_check=True).action_open()</field>
</record>

<record id="reimbursement_action_done" model="ir.actions.server">
    <field name="name">Action Done</field>
    <field name="model_id" ref="model_hr_reimbursement" />
    <field name="state">code</field>
    <field
                name="code"
            >records.with_context(bypass_policy_check=True).action_done()</field>
</record>
