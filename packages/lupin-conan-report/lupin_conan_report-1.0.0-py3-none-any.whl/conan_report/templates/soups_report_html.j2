<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SOUP report for {{ project_details.name }}</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            width: 20px;
        }
        th {
            background-color: #f2f2f2;
        }
        .name-cell {
            text-align: left;
            front-weight: bold;
            width: 40%;
        }
        .version-cell {
            width: 8%;
        }
        .license-cell {
            width: 15%;
        }
        .url {
            text-decoration: none;
            color: blue;
        }
        .url:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <h1>SOUP report for {{ project_details.name }}</h1>

    <p><strong>Branch:</strong> {{ project_details.current_branch }}</p>
    <p><strong>Commit id:</strong> {{ project_details.hash }}</p>
    {% if project_details.tag %}
    <p><strong>Tag:</strong> {{ project_details.tag }}</p>
    {% endif %}
    <p><strong>Date:</strong> {{ project_details.report_time }}</p>

    <table>
        <thead>
            <tr>
                <th colspan="4" style="text-align: center; font-size: 24px;">Direct soups</th>
            </tr>
            <tr>
                <th>Name</th>
                <th>Version</th>
                <th>URL</th>
                <th>License</th>
            </tr>
        </thead>
        <tbody>
            {% for soup in direct_soups %}
            <tr>
                <td style="font-size: 22px;" class="name-cell">
                    <div>{{ soup.name }}</div>
                    <div style="font-size: 14px; color: grey;">
                        {{ soup.description }}
                    </div>
                </td>
                <td class="version-cell">{{ soup.version }}</td>
                <td><a class="url" href="{{ soup.url }}">{{ soup.url }}</a></td>
                <td class="license-cell">
                    {% for lic in soup.license %}
                        <span>{{ lic }}</span>{% if not loop.last %}, {% endif %}
                    {% endfor %}
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    <div style="height: 30px;"></div>
    {% if indirect_soups %}
    <table>
        <thead>
            <tr>
                <th colspan="4" style="text-align: center; font-size: 24px;">Indirect soups</th>
            </tr>
            <tr>
                <th>Name</th>
                <th>Version</th>
                <th>URL</th>
                <th>License</th>
            </tr>
        </thead>
        <tbody>
            {% for soup in indirect_soups %}
            <tr>
                <td style="font-size: 22px;" class="name-cell">
                    <div>{{ soup.name }}</div>
                    <div style="font-size: 14px; color: grey;">
                        {{ soup.description }}
                    </div>
                </td>
                <td class="version-cell">{{ soup.version }}</td>
                <td><a class="url" href="{{ soup.url }}">{{ soup.url }}</a></td>
                <td class="license-cell">
                    {% for lic in soup.license %}
                        <span>{{ lic }}</span>{% if not loop.last %}, {% endif %}
                    {% endfor %}
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {% endif %}
</body>
</html>