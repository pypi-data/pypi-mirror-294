{% extends 'base/single-page.html.jinja' %}

{% block title %}Opdater oplysninger{% endblock %}

{% block sectioncontent %}
<form method="post" id="userform">
    <label for="username">Brugernavn</label>
    <input name="username" id="username" value="{{ request.form['username'] or user['username'] }}" required>

    <label for="password">Nyt kodeord</label>
    <input type="password" name="password" id="password" placeholder="Udfyld kun hvis det skal skiftes"
        value="{{ request.form['password'] }}">
    <label for="password2">Gentag kodeord</label>
    <input type="password" name="password2" id="password2" value="{{ request.form['password2'] }}">

    <label for="department_id">Department ID
        {% if g.isRoleAdmin %}
        <select name="department_id" id="department_id" form="userform">
            {% for id, name in g.static_values['departments'].items() %}
            {% if id == user['department_id'] %}
            <option value="{{id}}" selected="selected">{{name}}</option>
            {% else %}
            <option value="{{id}}">{{name}}</option>
            {% endif %}
            {% endfor %}
        </select>
        {% else %}
        <input name="department_id" value="{{ g.user['department_id'] }}" readonly>
        {% endif %}
    </label>

    <label for="role_id">Adgangsrolle
        <select name="role_id" id="role_id" form="userform">
            {% for id, role in g.static_values['valid_userroles'].items() %}
            {% if id == user['role_id'] %}
            <option value="{{id}}" selected="selected">{{role}}</option>
            {% else %}
            <option value="{{id}}">{{role}}</option>
            {% endif %}
            {% endfor %}
        </select>
    </label>

    <input type="submit" value="Opdater">
</form>
{% endblock %}